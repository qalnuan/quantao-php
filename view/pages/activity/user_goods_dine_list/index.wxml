             <view class='bnt cancel'  data-item="{{item}}" wx:if='{{item.is_del == 0 && item.status == 1}}' bindtap='cancelDine'>取消活动</view>
             <view class='bnt bg-color' data-item="{{item}}" wx:if='{{item.is_del == 0 && item.status == 1 && item.residue_price > item.dine_price_min}}' bindtap='toDine'>继续砍价</view>
             <view class='bnt bg-color'  data-item="{{item}}" wx:elif='{{item.is_del == 0 && item.status == 1 && item.residue_price == item.dine_price_min}}' bindtap='toDine'>立即付款</view>
             <view class='bnt bg-color' data-item="{{item}}" wx:else='{{item.status == 3}}' bindtap='toDineList'>重开一个</view>
          </view> -->
       </view>
   </view>
</view>

